<div class="image-upload"
  {{custom-property "--image-upload-height" this.cssHeight}}
  {{custom-property "--image-upload-width" this.cssWidth}}
  {{did-insert this.didInsert}}
  {{did-update this.reset @reset}}>

  <img class="image-upload__image" data-dz-thumbnail src={{@image}} />

  {{yield}}

</div>